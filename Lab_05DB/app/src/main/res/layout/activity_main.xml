<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="ID"
        android:id="@+id/idtext"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="F"
        android:id="@+id/ftext"
        android:layout_below="@+id/idtext"
        android:layout_alignParentStart="true"
        android:layout_marginTop="61dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="T"
        android:id="@+id/ttext"
        android:layout_below="@+id/ftext"
        android:layout_alignParentStart="true"
        android:layout_marginTop="61dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editID"
        android:inputType="number"
        android:layout_below="@+id/idtext"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editF"
        android:inputType="numberDecimal"
        android:layout_below="@+id/ftext"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/editID" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editT"
        android:layout_below="@+id/ttext"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/editF" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Insert"
        android:id="@+id/insertbutton"
        android:onClick="btn_click"
        android:layout_below="@+id/editT"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select"
        android:id="@+id/selectbutton"
        android:onClick="btn_click"
        android:layout_below="@+id/insertbutton"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select raw"
        android:id="@+id/selectrawbutton"
        android:onClick="btn_click"
        android:layout_below="@+id/selectbutton"
        android:layout_alignStart="@+id/selectbutton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:id="@+id/updatebutton"
        android:onClick="btn_click"
        android:layout_above="@+id/selectrawbutton"
        android:layout_alignEnd="@+id/editT" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/deletebutton"
        android:onClick="btn_click"
        android:layout_below="@+id/updatebutton"
        android:layout_alignStart="@+id/updatebutton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select all"
        android:id="@+id/selectallbutton"
        android:onClick="btn_click"
        android:layout_below="@+id/editT"
        android:layout_alignEnd="@+id/editT" />

</RelativeLayout>
